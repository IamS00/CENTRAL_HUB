// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Category {
  id            String      @id @default(cuid())
  name          String
  nameRo        String
  nameEn        String?
  slug          String      @unique
  parentId      String?
  parent        Category?   @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children      Category[]  @relation("CategoryHierarchy")
  type          String      // "need", "domain", "productType"
  order         Int         @default(0)
  resources     Resource[]  @relation("CategoryToResource")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([parentId])
  @@index([type])
  @@index([slug])
}

model Resource {
  id                String      @id @default(cuid())
  title             String
  titleRo           String
  titleEn           String?
  description       String?     @db.Text
  descriptionRo     String?     @db.Text
  descriptionEn     String?     @db.Text
  type              String      // "pdf", "video", "link", "redirect"
  fileUrl           String?     // Pentru PDF/video
  externalLink      String?     // Pentru linkuri externe
  thumbnailUrl      String?     // Thumbnail pentru video/preview
  categories        Category[]  @relation("CategoryToResource")
  storeAssociation  String?     // "printings", "numlit", "global"
  metadata          Json?       // Flexibil pentru date suplimentare
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([type])
  @@index([storeAssociation])
}

enum Role {
  USER
  ADMIN
}
